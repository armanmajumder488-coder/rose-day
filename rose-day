    <script>
        document.getElementById('nextBtn').addEventListener('click', function() {
            document.getElementById('flowers').style.display = 'block';
            this.style.display = 'none';
        });

        document.getElementById('flower1').addEventListener('click', function() {
            document.getElementById('message1').style.display = 'block';
            checkAllClicked();
        });

        document.getElementById('flower2').addEventListener('click', function() {
            document.getElementById('message2').style.display = 'block';
            checkAllClicked();
        });

        document.getElementById('flower3').addEventListener('click', function() {
            document.getElementById('message3').style.display = 'block';
            checkAllClicked();
        });

        function checkAllClicked() {
            if (document.getElementById('message1').style.display === 'block' &&
                document.getElementById('message2').style.display === 'block' &&
                document.getElementById('message3').style.display === 'block') {
                document.getElementById('bigRose').style.display = 'block';
            }
        }
    </script>
